@using PizzaApp.Application.ViewModel.Pizza
@model IEnumerable<PizzaViewModel>



<a class="btn btn-primary" asp-controller="Pizza" asp-action="Create">Create new pizza</a>
<hr/>
<table class="table table-hover table-bordered ">
    <thead class="table-primary">
        <tr>
            <td>Pizza name</td>
            <td>Pizza price</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var pizza in Model)
        {
            <tr>
                <td><a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id" class="pizza-name">@pizza.Name</a></td>
                <td><div>@pizza.Price</div></td>
                <td>
                    <a asp-controller="Pizza" asp-action="Edit" asp-route-id="@pizza.Id" class="btn btn-link">Edit</a>
                    <a asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

