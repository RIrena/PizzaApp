@using PizzaApp.Domain.Models
@model IList<Order>

<a asp-action="Create">Create Order</a>
<table class="table table-active table-bordered">
    <thead>
        <tr>
            <td>Link</td>
            <td>For User</td>
            <td>Price</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id">Link to order</a>
                </td>
                <td>@order.User.Name</td>
                <td>@order.Price</td>
            </tr>
        }
    </tbody>
</table>